{
  "name": "rca-poster-archive",
  "version": "1.0.0",
  "description": "A project archiving the RCA's posters of the past 75 years.",
  "main": "index.js",
  "scripts": {
    "postinstall": "rm -r assets/vendor/* && cp -r node_modules/* assets/vendor/ && npm run build:watch",
    "build:js": "uglifyjs _src/assets/js/*.js -m -c -o assets/js/main.min.js",
    "build:css": "cleancss -o assets/css/main.min.css _src/assets/css/main.css",
    "build": "npm run build:js && npm run build:css",
	"build:watch": "watch 'npm run build' _src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jclwilson/rca-poster-archive.git"
  },
  "author": "Jacob Charles Wilson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jclwilson/rca-poster-archive/issues"
  },
  "homepage": "https://github.com/jclwilson/rca-poster-archive#readme",
  "dependencies": {
    "headroom.js": "^0.9.3",
    "lazysizes": "^4.0.0-rc1",
    "smooth-scroll": "git+https://github.com/cferdinandi/smooth-scroll.git"
  },
  "devDependencies": {
    "clean-css-cli": "^4.1.3",
    "eslint": "^3.19.0",
    "uglify-js": "^3.0.14",
    "watch": "^1.0.2"
  }
}
